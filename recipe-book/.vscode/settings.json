{
  "css.lint.unknownAtRules": "ignore",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.glyphMargin": false,
  "editor.folding": false,
  "editor.lineNumbers": "off",
  "editor.minimap.enabled": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.scrollbar.horizontalScrollbarSize": 0,
  "editor.mouseWheelScrollSensitivity": 1,
  "editor.fastScrollSensitivity": 1,
  "editor.smoothScrolling": false,
  "editor.cursorBlinking": "solid",
  "editor.stickyScroll.enabled": true,
  "editor.fontFamily": "'CaskaydiaMono Nerd Font Mono'",
  "editor.fontLigatures": true,
  "editor.lightbulb.enabled": "off",
  "breadcrumbs.enabled": false,
  "editor.guides.bracketPairs": "active",
  "editor.lineHeight": 2,
  "editor.fontWeight": "normal",
  "editor.guides.indentation": false,
  "editor.guides.highlightActiveIndentation": false,
  "editor.wordWrapColumn": 50,
  "editor.wordWrap": "on",
  "editor.renderControlCharacters": false,
  "editor.accessibilitySupport": "off",
  "workbench.colorTheme": "Tokyo Night",
  "workbench.activityBar.location": "hidden",
  "workbench.hover.delay": 500,
  "workbench.sash.hoverDelay": 500,
  "workbench.editor.empty.hint": "hidden",
  "workbench.statusBar.visible": false,
  "workbench.startupEditor": "none",
  "workbench.preferredDarkColorTheme": "Tokyo Night",
  "workbench.layoutControl.enabled": false,
  "editor.scrollbar.scrollByPage": true,
  "zenMode.showTabs": "single",
  "zenMode.centerLayout": false,
  "zenMode.fullScreen": true
}
